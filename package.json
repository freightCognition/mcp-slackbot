    "pm2": "^5.3.1",
    "raw-body": "^2.5.2",
    "tsscmp": "^1.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "eslint": "^9.27.0",
    "globals": "^16.2.0",
    "nodemon": "^3.0.3"
  },
  "keywords": ["slack", "slackbot", "mycarrierportal", "fakebizprez", "linehaul.ai"],
