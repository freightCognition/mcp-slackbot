{
  "name": "mcp-slackbot",
  "version": "2.1.2",
  "description": "freightCognition open-source app to execute Carrier Risk Assessments, with the MyCarrierPortal API, from within your Slack environment.",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "pm2:start": "pm2 start app.js --name mcp-slackbot",
