{
  "name": "mcp-slackbot",
  "version": "2.1.4",
  "description": "linehaul.ai open-source app to execute Carrier Risk Assessments, with the MyCarrierPortal API, from within your Slack environment.",
  "main": "app.js",
  "scripts": {
    "start": "bun app.js",
    "dev": "bun --watch app.js",
    "pm2:start": "pm2 start app.js --interpreter bun --name mcp-slackbot",
    "pm2:stop": "pm2 stop mcp-slackbot",
    "pm2:restart": "pm2 restart mcp-slackbot",
    "pm2:logs": "pm2 logs mcp-slackbot",
    "pm2:status": "pm2 status",
    "test": "bun tests/test_preview.js && bun tests/test_refresh.js && bun tests/test_token.js",
    "test:token": "bun tests/test_token.js",
    "test:refresh": "bun tests/test_refresh.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/linehaul.ai/mcp-slackbot.git"
  },
  "license": "MIT",
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "axios": "^1.7.4",
    "body-parser": "^1.20.2",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pm2": "^5.3.1",
    "qs": "^6.13.0",
    "raw-body": "^2.5.2",
    "tsscmp": "^1.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "eslint": "^9.27.0",
    "globals": "^16.2.0"
  },
  "keywords": [
    "slack",
    "slackbot",
    "mycarrierportal",
    "fakebizprez",
    "linehaul.ai"
  ],
  "author": "linehaul.ai",
  "engines": {
    "bun": ">=1.0.0"
  }
}
